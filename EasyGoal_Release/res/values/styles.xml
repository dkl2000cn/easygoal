<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    
    <style name="AppTheme" parent="Theme.AppCompat.Light" />    
    
       <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       <item name="windowActionBar">false</item>
       <item name="android:windowAnimationStyle">@style/notAnimation</item>
       <item name="android:windowNoTitle">true</item>
       <item name="android:textSize">18sp</item>
       <item name="colorPrimary">#990066</item> <!--浅蓝色-->
       <item name="colorPrimaryDark">#990066</item> <!--深蓝色-->

    </style>
     
     <style name="DialogFragment" parent="Theme.AppCompat.Light.Dialog">  
       <item name="android:windowNoTitle">false</item>
     </style>  
     <style name="OpenAppThemeNoActionBar" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. 
        <item name="android:windowBackground">@color/mPrimaryColor</item>
        -->
       <item name="windowActionBar">false</item>
       <item name="android:windowNoTitle">true</item>
       <item name="android:textSize">18sp</item>
       <item name="colorPrimary">#BA55D3</item> <!--浅蓝色-->
       <item name="colorPrimaryDark">#990066</item> <!--深蓝色-->             <item name="android:windowIsTranslucent"> true </item>

    </style> 
  <style name="notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
    
    <style name="SubAppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       <item name="windowActionBar">false</item>
       <item name="android:textColor">#000000</item>
       <item name="android:textSize">18sp</item>
       <item name="colorPrimary">#BA55D3</item> <!--浅蓝色-->
       <item name="colorPrimaryDark">#9400D3</item> <!--深蓝色-->
        <item name="android:windowAnimationStyle">@style/notAnimation</item>
    </style>
       
  <style name="style_titlebar_normal" parent="Theme.AppCompat.Light">  
   
        <item name="android:homeAsUpIndicator">@drawable/back_48px</item> <!--返回icon-->  
  
    </style>   
  <!-- Base application theme. -->
  <style name="fileAppCompatNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
      
       <item name="windowNoTitle">true</item>
       <item name="android:textColor">#000000</item>
       <item name="colorPrimary">#BA55D3</item> <!--浅蓝色-->
       <item name="colorPrimaryDark">#9400D3</item> <!--深蓝色-->
       <item name="android:textSize">18sp</item>
       <item name="android:windowAnimationStyle">@style/notAnimation</item>
  </style>
  
  
 <style name="mRatingBar" parent="@android:style/Widget.RatingBar">
  <item name="android:progressDrawable">@drawable/mratingbar</item>
  <item name="android:numStars">3</item>
  <item name="android:minHeight">8dp</item>
  <item name="android:maxHeight">8dp</item>
 </style>

 
</resources>
