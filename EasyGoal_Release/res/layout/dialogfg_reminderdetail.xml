<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fastScrollEnabled="true"
    android:focusable="false"
    android:orientation="vertical"
    android:scrollbars="vertical" >

      <Button
         android:id="@+id/btn_closewin"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="end"
         android:background="@drawable/closewin"
         android:minHeight="32dip"
         android:minWidth="32dp" />
    
     
     <TextView
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topmargin_dialog"
        android:layout_marginRight="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_left"
        android:gravity="start"
        android:text="提醒详情"
        android:textSize="18sp" />

    <LinearLayout
  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
   
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">   
    
       <TextView
        android:id="@+id/tv_remindertitle"   
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:layout_marginLeft="@dimen/margin_left"
        android:drawableLeft="@drawable/title"
        android:drawablePadding="5dp"
        android:textColor="@color/mediumorchid"
        android:textSize="15sp" /> 
        <TextView
        android:id="@+id/tv_remindersource"   
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right" 
        android:textColor="@color/darkgreen"
        android:textSize="14sp" /> 
    </LinearLayout>  
     
     <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp" 
       android:layout_marginBottom="@dimen/margin_bottom"  
       android:orientation="horizontal">    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/reminder"
        android:drawablePadding="5dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:textSize="14sp" />
       <TextView
        android:id="@+id/tv_reminderdeadline"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="start"
        android:background="@color/mistyrose"  
        android:textSize="14sp" /> 
      </LinearLayout>  
          
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top"
    android:orientation="horizontal">   

       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提醒内容"
        android:layout_marginLeft="@dimen/margin_left"
        android:drawableLeft="@drawable/checklist"
        android:drawablePadding="5dp"
        android:textSize="14sp" /> 
       
    </LinearLayout>   
       
       <EditText
        android:id="@+id/et_reminder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/margin_top" 
        android:gravity="top"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"    
        android:layout_gravity="center_horizontal"
        android:background="@color/lightgray"  
        android:hint="[提示]点击编辑可修改"
        android:textSize="14sp" />
    
   </LinearLayout>
   
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"> 
       <Button
        android:id="@+id/btn_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:text="编辑"
        android:background="@color/mediumorchid"
        android:textSize="16sp" /> 

       <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:text="取消"
        android:background="@color/gray"
        android:textSize="16sp" />
      
       <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginRight="@dimen/margin_right"
        android:text="保存"
        android:background="@color/tan"
        android:textSize="16sp" /> 
    
     </LinearLayout>
</LinearLayout>