                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:checked="false"
                android:gravity="center"
                android:text="YES"
                android:textSize="14sp" />
        </LinearLayout>
      </LinearLayout>   
    </LinearLayout>
          <LinearLayout
