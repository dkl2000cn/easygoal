                android:id="@+id/model1_timeunit_spin"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height"
                android:layout_margin="0dp"
                android:gravity="center"
                android:text=""
                android:textSize="14sp" />

        </LinearLayout>
        
            <LinearLayout
