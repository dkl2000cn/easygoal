<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/mTextColor2"
    android:paddingTop="@dimen/list_margintop"
    android:paddingBottom="@dimen/list_marginbottom"
    >    
    <TextView
        android:id="@+id/task_item0_id_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="任务ID"
         android:layout_gravity="center_vertical"
         android:gravity="center"
         android:visibility="gone"
        android:textSize="12sp" />
    <LinearLayout 
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.3"
    android:orientation="vertical">  
    <TextView
        android:id="@+id/task_item1_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:gravity="start"
        android:text="name"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/task_item30_closedtime_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:text="80"
        android:textSize="12sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/task_item31_finishedpercent_tv"
         android:layout_width="50dp"
        android:layout_height="wrap_content"
      
           android:layout_gravity="center_vertical"
         android:gravity="center"
        android:text="80"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/task_item32_lapsedpercent_tv"
         android:layout_width="50dp"
        android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
         android:gravity="center"
        android:text="80"      
        android:textSize="12sp" />
    <TextView
        android:id="@+id/task_item33_progcomment_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_right"
        android:text="80"   
        android:textSize="12sp" />
  
</LinearLayout>