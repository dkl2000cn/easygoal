<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
     android:fastScrollEnabled="true"
     android:focusable="false"
    android:orientation="vertical" >
     
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="5dp"
         android:layout_marginTop="5dp"
         android:orientation="horizontal" >
              <TextView
      android:id="@+id/tv_memocreatedtime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_left"
      android:layout_marginRight="@dimen/margin_right"
      android:textSize="14sp"/>
  
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="end"
         android:gravity="end"
         android:orientation="horizontal" >

       <Button
        android:id="@+id/btn_reminderadd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="@dimen/margin_right" 
        android:background="@drawable/addrecord"
        android:textSize="13sp" />
         <Button
        android:id="@+id/btn_reminderupdate"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="@dimen/margin_right" 
        android:background="@drawable/update"
        android:textSize="13sp" />
     <Button
        android:id="@+id/btn_reminderdelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="@dimen/margin_right" 
        android:layout_gravity="center"
        android:background="@drawable/delete"
        android:textSize="13sp" />
         <Button
        android:id="@+id/btn_reminderclear"
        android:layout_width="24dp"
        android:layout_height="24dp"     
        android:layout_marginRight="@dimen/margin_right"   
        android:background="@drawable/clear"
        android:textSize="13sp" />
             <Button
        android:id="@+id/btn_export"
        android:layout_width="24dp"
        android:layout_height="24dp"     
        android:layout_marginRight="@dimen/margin_right"  
        android:visibility="gone"
        android:background="@drawable/export"
        android:textSize="13sp" />
</LinearLayout>   
</LinearLayout>   
  
 <ListView
     android:id="@+id/lv_reminder"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginBottom="60dp"
     android:layout_marginTop="5dp"
     android:descendantFocusability="blocksDescendants"
     android:scrollbars="vertical"
     android:tag="show" >

    </ListView>
      
</LinearLayout>