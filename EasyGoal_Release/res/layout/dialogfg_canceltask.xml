<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:background="@android:color/transparent"  
    android:gravity="center" >  

 <Button
     android:id="@+id/btn_closewin"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_alignParentTop="true"
     android:background="@drawable/closewin"
     android:minHeight="32dp"
     android:minWidth="32dp" />
    
 <TextView  
                android:id="@+id/tvheader"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                 android:layout_below="@+id/btn_closewin"
                 android:layout_marginTop="@dimen/margin_top"
                android:text="取消任务"
             
                 /> 
    <TextView
        android:id="@+id/tv_recordtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvheader"
        android:text="recordTime"
        android:textSize="13dp" />               
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_recordtime"
    android:layout_marginTop="@dimen/listpadding_top"
    android:orientation="vertical"
    android:scrollbars="vertical" >
 
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/titlecolor_dialog"
             android:orientation="horizontal"
             android:scrollbars="horizontal" >

        <TextView  
                android:id="@+id/tv1"  
                android:layout_width="60dp"  
                android:layout_height="wrap_content"
               
                android:textSize="14sp" 
                
                 android:layout_marginLeft="10dp"
                android:text="任务ID" /> 
                 <TextView
        android:id="@+id/record_item1_taskID_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
         android:layout_marginLeft="10dp"
        android:text="taskID"
        android:textSize="14sp" />
     </LinearLayout> 

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:scrollbars="horizontal" >

             <TextView
                 android:id="@+id/tv2"
                 android:layout_width="60dp"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/margin_bottom"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="@dimen/margin_top"
                 android:text="任务名称"
                 android:textSize="14sp" />

             <TextView
                 android:id="@+id/task_item1_name_tv"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                
                 android:text="name"
                 android:textSize="14sp" />
         </LinearLayout>
 
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginBottom="@dimen/margin_bottom"
    android:scrollbars="horizontal"
    android:orientation="horizontal" >
    
        
            <TextView  
                android:id="@+id/tv_newtaskdeadline"  
                android:layout_width="60dp"  
                android:layout_height="wrap_content"
                android:textSize="14sp" 
                 android:layout_marginLeft="10dp"
                android:text="任务期限"/> 
         <TextView
        android:id="@+id/task_item15_deadline_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp" />
         
        </LinearLayout>  
          <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal"
    android:orientation="horizontal" >
          <TextView  
                android:id="@+id/tv4"  
                android:layout_width="60dp"  
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" 
                android:text="任务进度"/> 
        <TextView
        android:id="@+id/task_item16_progress_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="60%"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:textSize="14sp" />
       <TextView  
             
                android:layout_width="40dp"  
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:textSize="14sp" 
                android:text="%"/>
          <TextView  
                android:id="@+id/tv5"  
                android:layout_width="60dp"  
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:textSize="14sp" 
                android:text="任务状态"/> 
         <TextView
        android:id="@+id/task_item18_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"
        android:gravity="start"
           android:layout_marginLeft="10dp"
        android:textSize="14sp" />
        </LinearLayout> 
      <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_top"
       android:layout_marginBottom="@dimen/margin_bottom"
       android:background="@drawable/titlecolor_dialog"
       android:orientation="horizontal" >  
                <TextView  
                android:id="@+id/tv_newrecordstep3"  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"
                android:textSize="14sp" 
                android:layout_marginLeft="5dp"   
                android:text="任务取消"/> 
      </LinearLayout>            
       <LinearLayout 
     android:id="@+id/linlay_taskcancelreason"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_top"
    android:layout_marginBottom="@dimen/margin_bottom"
    android:orientation="horizontal" >    
         <TextView  
             
                android:layout_width="60dp"  
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:textSize="14sp" 
                android:text="取消原因"/> 
        <EditText
        android:id="@+id/task_item31_cancelremarks_et"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:hint="请说明取消原因"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="14sp" />
      </LinearLayout> 
      <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal"
    android:orientation="horizontal" >
     <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"

        android:layout_weight="0.3"
        android:text="确认"
        android:background="@color/tan"
        android:textSize="14sp" />
     <Button
        android:id="@+id/btn_abort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_weight="0.3"
        android:text="取消"
        android:background="@color/gray"
        android:textSize="14sp" />
    
    </LinearLayout>
    
</LinearLayout>
</RelativeLayout> 
