<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:orientation="vertical" >
<TextView  
                android:id="@+id/tv_opentasks"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content" 
                android:gravity="center" 
                android:text="新建进度"/> 
 <TextView
        android:id="@+id/record_item1_recordID_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="recordID"
        android:layout_margin="1dp"
        android:textSize="5dp" />

    <EditText
        android:id="@+id/record_item2_recordTime_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="recordTime"
        android:textSize="5dp" />
    
    <EditText
        android:id="@+id/record_item4_progress_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="30%"
        android:layout_margin="1dp"
        android:textSize="5dp" />
    
    <EditText
        android:id="@+id/record_item5_comment_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_margin="1dp"
        android:textSize="5dp" />
      <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:orientation="horizontal" >
    <Button
        android:id="@+id/record_confirm_bt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="confirm"
        android:textSize="5dp" />
    </LinearLayout>
</LinearLayout>