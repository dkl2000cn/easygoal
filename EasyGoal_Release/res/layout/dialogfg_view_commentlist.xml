<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="fill_parent"    
    android:background="@android:color/transparent"  
    android:gravity="center" >  

 <Button  
        android:id="@+id/comment_close_bt"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
       android:layout_alignParentRight="true"
     android:layout_alignParentTop="true"
     android:background="@drawable/closewin"
     android:minHeight="32dp"
     android:minWidth="32dp"   />   
 <TextView  
                android:id="@+id/tv_header"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content" 
                 android:layout_below="@+id/comment_close_bt" 
                  android:layout_marginTop="@dimen/margin_top"
                android:gravity="center" 
                android:layout_marginLeft="5dp"
                android:text="全部进度"/> 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_header" 
    android:layout_marginLeft="9dp"  
    android:layout_marginRight="9dp"  
    android:layout_marginTop="9dp"
    android:scrollbars="vertical"
    android:orientation="vertical"
    >
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:orientation="horizontal" >
    <Button
        android:id="@+id/comment_save_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_weight="0.3"
        android:background="@drawable/btncolor"
        android:text="save"
        android:textSize="12sp" />
      <Button
        android:id="@+id/comment_edit_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_weight="0.3"
        android:background="@drawable/btncolor"
        android:text="edit"
        android:textSize="12sp" />
     <Button
        android:id="@+id/comment_delete_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_weight="0.3"
        android:background="@drawable/btncolor"
        android:text="delete"
        android:textSize="12sp" />
      <Button
        android:id="@+id/record_clear_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_weight="0.3"
        android:background="@drawable/btncolor"
        android:text="clear"
        android:textSize="12sp" />
      <Button
        android:id="@+id/btn_conn"
        android:layout_width="@dimen/imgbtn_width"
        android:layout_height="@dimen/imgbtn_height"
        android:layout_marginRight="@dimen/imgbtn_padding"
        android:background="@drawable/clear"
        android:textSize="13sp" />
   </LinearLayout>
       <ListView
        android:id="@+id/taskcomments_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants"
        android:tag="show"
        android:scrollbars="vertical" />  
  </LinearLayout>
 </RelativeLayout> 