<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/listpadding_top"
    android:layout_marginBottom="@dimen/listpadding_bottom"
    android:textColor="@color/black"
    android:orientation="horizontal"
    android:scrollbars="horizontal" >
 
    <TextView
        android:id="@+id/record_item1_taskID_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_gravity="center_vertical"
        android:text="name"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="12sp" /> 
 

    <TextView
        android:id="@+id/record_item2_recordTime_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="recordTime"
         android:textColor="@color/black"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/record_item4_progress_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="50%"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/record_item5_comment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/listpadding_top"
        android:layout_marginBottom="@dimen/listpadding_bottom"
        android:text="comment"
        android:textColor="@color/black"
        android:textSize="12sp" />

</LinearLayout>