<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
     <TextView
        android:id="@+id/record_item1_taskID_tv"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="taskID"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/task_item15_deadline_tv"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="deadline"
        android:textSize="8sp" />   
     
    <TextView
        android:id="@+id/task_item2_createdtime_tv"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="createdtime"
        android:layout_margin="1dp"
        android:textSize="8sp" />   
     
     <TextView
        android:id="@+id/task_item16_progress_tv"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="80"
        android:gravity="center"
        android:textSize="8sp" />

     <TextView
        android:id="@+id/task_item1_name_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="name"
        android:textSize="8sp" />
     
</LinearLayout>
<LinearLayout  android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"> 
    <ListView
        android:id="@+id/taskcomments_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="high"
        android:textSize="8sp" />
</LinearLayout>
</LinearLayout>