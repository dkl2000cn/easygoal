<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#EED2EE">
      <ImageView
                android:id="@+id/iv1"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="120dp" 
                 android:background="@drawable/textlogo"
       />  
<TextView  
        android:id="@+id/login"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_below="@+id/iv1"
        android:gravity="center_horizontal"  
        android:textColor="@color/darkorchid"
        android:textSize="22sp"  
        android:layout_marginTop="20dp"  
        android:visibility="invisible"
        android:text="欢迎登录" />  
       
        <LinearLayout   
        android:id="@+id/ll_username" 
        android:orientation="vertical"  
        android:layout_width="320dp"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/iv1"  
        android:layout_marginTop="60dp" 
        android:background="@drawable/bg_login_div" 
        android:layout_centerHorizontal="true">
        
        
        <TextView   
        android:id="@+id/txtname"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/login"  
        android:layout_marginLeft="10dp"     
        android:textSize="16sp"
        android:gravity="center"  
        android:visibility="gone"
        android:text="帐号:"/>  
    <EditText   
        android:id="@+id/et_username"  
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"  
         android:layout_below="@id/txtname" 
        android:layout_marginTop="@dimen/loginbtn_margintop" 
        android:layout_marginRight="@dimen/loginbtn_marginright" 
        android:layout_marginLeft="@dimen/loginbtn_marginleft"  
         android:background="@drawable/shape_line_edittext"
        android:layout_toRightOf="@id/txtname"  
        android:drawableLeft="@drawable/user32px"
         android:drawablePadding="5dp"
         android:textSize="16sp"  
         
         android:hint="手机号/用户名"/>  
       
        <TextView   
        android:id="@+id/txtpassword"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginTop="5dp" 
        android:layout_marginRight="@dimen/loginbtn_marginright" 
        android:layout_marginLeft="@dimen/loginbtn_marginleft"  
        android:textSize="16sp"  
        android:gravity="center"
        android:visibility="gone"
        android:text="密码:"/>  
       <EditText   
        android:id="@+id/et_password"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"   
        android:layout_marginTop="5dp" 
        android:layout_marginRight="@dimen/loginbtn_marginright" 
        android:layout_marginLeft="@dimen/loginbtn_marginleft"  
        android:layout_toRightOf="@id/txtpassword"  
         android:background="@drawable/shape_line_edittext"
         android:drawableLeft="@drawable/pwd"
          android:drawablePadding="5dp"
         android:textSize="16sp"  
        android:inputType="textPassword"  
        android:hint="请输入密码"/>  
     
      
    <EditText   
        android:id="@+id/et_password2"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_marginRight="@dimen/loginbtn_marginright" 
        android:layout_marginLeft="@dimen/loginbtn_marginleft" 
        android:layout_marginTop="5dp" 
        android:layout_toRightOf="@id/txtpassword"  
        android:background="@drawable/shape_line_edittext"
         android:drawableLeft="@drawable/pwd"
          android:drawablePadding="5dp"
         android:textSize="16sp"  
        android:inputType="textPassword"  
        android:hint="请确认密码"/>  
     <Button   
        android:id="@+id/bt_register"  
        android:layout_height="32dp"  
        android:layout_width="match_parent"  
       
        android:background="@drawable/shape_line_btn"
        android:padding="2dp"
        android:layout_marginTop="10dp"  
        android:layout_marginRight="@dimen/loginbtn_marginright" 
        android:layout_marginLeft="@dimen/loginbtn_marginleft" 
                 
        android:textSize="16sp" 
        android:text="注册"/> 
     
    
    <LinearLayout   
     
        android:orientation="horizontal"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_below="@+id/bt_login" 
        android:layout_marginTop="10dp" > 
    
    <TextView   
        android:id="@+id/tv_backtologin"  
        android:layout_height="@dimen/registerbtn_height"  
        android:layout_width="match_parent"  
       
        
           android:padding="2dp"
                  
                  android:layout_marginTop="10dp" 
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
         android:textSize="16sp" 
         android:gravity="center"
        android:text="返回登录"/> 
    
        </LinearLayout>
    </LinearLayout>  
</RelativeLayout>
